<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmentosTutor.TutorFragment">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/buttonDescargarListaTrabajadores"
        android:layout_width="175dp"
        android:layout_height="74dp"
        android:layout_marginTop="124dp"
        android:backgroundTint="@color/black"
        android:fontFamily="sans-serif-black"
        android:text="Descargar Trabajadores"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#54CDC2"
        android:textDirection="firstStrongLtr"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonBuscarTrabajador"
        android:layout_width="158dp"
        android:layout_height="74dp"
        android:layout_marginTop="56dp"
        android:backgroundTint="@color/black"
        android:fontFamily="sans-serif-black"
        android:text="Buscar Trabajador"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#54CDC2"
        android:textDirection="firstStrongLtr"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonDescargarListaTrabajadores" />

    <Button
        android:id="@+id/buttonAsignarTutoria"
        android:layout_width="158dp"
        android:layout_height="74dp"
        android:layout_marginTop="56dp"
        android:backgroundTint="@color/black"
        android:fontFamily="sans-serif-black"
        android:text="Asignar Tutoria"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#54CDC2"
        android:textDirection="firstStrongLtr"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonBuscarTrabajador" />

</androidx.constraintlayout.widget.ConstraintLayout>